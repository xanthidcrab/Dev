<Window x:Class="BarcodeDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcodeDesigner"
        xmlns:viewmodel="clr-namespace:BarcodeDesigner.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">

        <!-- Üst Menü: Navigation Butonları -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    Background="LightGray">
            <Button Content="HomePage"
                    Command="{Binding NavigateHomePageCommand}"
                    Margin="5" />
            
            <Button Content="Settings"
                    Command="{Binding NavigateSettingsPageCommand}"
                    Margin="5" />
        </StackPanel>

        <!-- Sayfa İçeriği -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
