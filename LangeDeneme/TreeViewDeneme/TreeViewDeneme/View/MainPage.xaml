<UserControl x:Class="TreeViewDeneme.View.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeViewDeneme.View"
             xmlns:viewmodel="clr-namespace:TreeViewDeneme.ViewModel"
             xmlns:model="clr-namespace:TreeViewDeneme.Model"
             d:DataContext="{d:DesignInstance Type=viewmodel:MainPageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TreeView ItemsSource="{Binding XmlList}">
            <TreeView.Resources>

                <!-- Yalnızca HierarchicalDataTemplate kullan -->
                <HierarchicalDataTemplate DataType="{x:Type model:XMLMODEL}"
                                          ItemsSource="{Binding OPERATIONSDATATABLE}">
                    <TextBlock Text="{Binding PROFILESDATATABLE.STOCKCODE}" />
                </HierarchicalDataTemplate>

                <!-- OPERATIONMODEL için düz gösterim -->
                <DataTemplate DataType="{x:Type model:OPERATIONMODEL}">
                    <TextBlock Text="{Binding OPERATIONNAME}" />
                </DataTemplate>

            </TreeView.Resources>
        </TreeView>

    </Grid>
</UserControl>
