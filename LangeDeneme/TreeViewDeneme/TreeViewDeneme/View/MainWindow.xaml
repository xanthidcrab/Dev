<Window x:Class="TreeViewDeneme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeViewDeneme"
        xmlns:vm="clr-namespace:TreeViewDeneme.ViewModel"
        xmlns:vv="clr-namespace:TreeViewDeneme.View"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainPageViewModel}">
            <vv:MainPage />
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top" MaxHeight="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                 
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="3"
                    Content="{Binding ContentModel.ExitButton}"
                    Command="{Binding ExitCommand}"
                    Margin="5" />
        </Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>
