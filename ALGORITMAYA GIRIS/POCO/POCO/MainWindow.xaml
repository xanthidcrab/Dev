<Window x:Class="POCO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POCO"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.DataContext>
        <local:Mw />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!-- Add more RowDefinitions as needed for each property -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Example for 4 properties: Property1, Property2, Property3, Property4 -->
        <Label Grid.Row="0"
               Grid.Column="0"
               Content="bAutocycle:" />
        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.bAutocycle}" />

        <Label Grid.Row="1"
               Grid.Column="0"
               Content="bManual:" />
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.bManual}" />

        <Label Grid.Row="2"
               Grid.Column="0"
               Content="bStart:" />
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.bStart}" />

        <Label Grid.Row="3"
               Grid.Column="0"
               Content="bStop:" />
        <TextBlock Grid.Row="3"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.bStop}" />

        <Label Grid.Row="4"
               Grid.Column="0"
               Content="Id:" />
        <TextBlock Grid.Row="4"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.Id}" />
        <Label Grid.Row="5"
               Grid.Column="0"
               Content="StartforNextJob:" />
        <TextBlock Grid.Row="5"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.StartforNextJob}" />
        <Label Grid.Row="6"
               Grid.Column="0"
               Content="TargetXft:" />
        <TextBlock Grid.Row="6"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.TargetXft}" />
        <Label Grid.Row="7"
               Grid.Column="0"
               Content="TargetYft:" />
        <TextBlock Grid.Row="7"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.TargetYft}" />
        <Label Grid.Row="8"
               Grid.Column="0"
               Content="TargetZft:" />
        <TextBlock Grid.Row="8"
                   Grid.Column="1"
                   Text="{Binding GlobalModel.TargetZft}" />
        <!-- Repeat for each property in your GlobalModel -->
    </Grid>
</Window>
