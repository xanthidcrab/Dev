<Application x:Class="MVVM_Navigation_Example.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MVVM_Navigation_Example"
             xmlns:v="clr-namespace:MVVM_Navigation_Example.View"
             xmlns:vm="clr-namespace:MVVM_Navigation_Example.ViewModel">

    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:AutoViewModel}">
            <v:AutoControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManualViewModel}">
            <v:ManaulControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <v:SettingsControl />
        </DataTemplate>

    </Application.Resources>

</Application>
